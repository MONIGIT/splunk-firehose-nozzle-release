set -ex

ls -lahR

mkdir -p ${BOSH_INSTALL_TARGET}/src/github.com/cf-platform-eng
mv splunk-firehose-nozzle ${BOSH_INSTALL_TARGET}/src/github.com/cf-platform-eng
export GOPATH=$BOSH_INSTALL_TARGET

export GOROOT=$(readlink -nf /var/vcap/packages/golang)
export PATH=$GOROOT/bin:$PATH
go install github.com/cf-platform-eng/splunk-firehose-nozzle

# clean up source artifacts
rm -rf ${BOSH_INSTALL_TARGET}/src ${BOSH_INSTALL_TARGET}/pkg
