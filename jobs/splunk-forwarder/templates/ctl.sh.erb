#!/bin/bash

RUN_DIR=/var/vcap/sys/run/splunk-forwarder
LOG_DIR=/var/vcap/sys/log/splunk-forwarder
JOB_DIR=/var/vcap/jobs/splunk-forwarder
PACKAGE_DIR=/var/vcap/packages/splunk
PIDFILE=${RUN_DIR}/pid

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    echo $$ > $PIDFILE

    mkdir -p ${PACKAGE_DIR}/etc/system/local/
    ln -fs ${JOB_DIR}/config/system_inputs.conf ${PACKAGE_DIR}/etc/system/local/inputs.conf
    ln -fs ${JOB_DIR}/config/system_outputs.conf ${PACKAGE_DIR}/etc/system/local/outputs.conf

    mkdir -p ${PACKAGE_DIR}/etc/apps/splunk_httpinput/local/
    ln -fs ${JOB_DIR}/config/hec_inputs.conf ${PACKAGE_DIR}/etc/apps/splunk_httpinput/local/inputs.conf

    exec /var/vcap/packages/splunk/bin/splunk start --accept-license \
      >>  $LOG_DIR/forwarder.stdout.log \
      2>> $LOG_DIR/forwarder.stderr.log

    ;;

  stop)
    /var/vcap/packages/splunk/bin/splunk stop
    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
