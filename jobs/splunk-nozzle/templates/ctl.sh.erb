#!/bin/bash

set -ex

RUN_DIR=/var/vcap/sys/run/splunk-nozzle
LOG_DIR=/var/vcap/sys/log/splunk-nozzle
#JOB_DIR=/var/vcap/jobs/splunk-nozzle
PACKAGE_DIR=/var/vcap/packages/splunk-nozzle
PIDFILE=${RUN_DIR}/pid

case $1 in

  start)

    export NOZZLE_UAA_URL=<%= p('cf_splunk.uaa_url') %>
    export NOZZLE_USERNAME=<%= p('cf_splunk.uaa_username') %>
    export NOZZLE_PASSWORD=<%= p('cf_splunk.uaa_secret') %>
    export NOZZLE_TRAFFIC_CONTROLLER_URL=<%= p('cf_splunk.traffic_controller_url') %>
    export NOZZLE_FIREHOSE_SUBSCRIPTION_ID=<%= p('cf_splunk.firehose_subscription_id') %>
    export NOZZLE_INSECURE_SKIP_VERIFY=<%= p('cf_splunk.insecure_skip_verify') %>
    export NOZZLE_SELECTED_EVENTS=<%= p('cf_splunk.selected_events') %>

    export NOZZLE_SPLUNK_TOKEN=<%= p('cf_splunk.hec_token') %>
    export NOZZLE_SPLUNK_HOST=http://localhost:8088

    mkdir -p ${RUN_DIR} ${LOG_DIR}

    chown -R vcap:vcap ${RUN_DIR} ${LOG_DIR} ${PACKAGE_DIR}/

    #pid_guard $PIDFILE $JOB_NAME

    echo $$ > ${PIDFILE}

    exec chpst -u vcap:vcap ${PACKAGE_DIR}/bin/splunk-firehose-nozzle \
      >>  $LOG_DIR/splunk-nozzle.stdout.log \
      2>> $LOG_DIR/splunk-nozzle.stderr.log

    ;;

  stop)
    /var/vcap/packages/splunk/bin/splunk stop
    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl.sh {start|stop}" ;;

esac
